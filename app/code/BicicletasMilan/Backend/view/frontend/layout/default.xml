<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:nonamespaceschemalocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>        
        <referenceBlock name="catalog.compare.sidebar" remove="true" />
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="backendtest-link" before="-">
                <arguments>
                    <argument name="label" translate="true" xsi:type="string">Backend TEST</argument>
                    <argument name="path" xsi:type="string">backendtest</argument>
                </arguments>
            </block>            
            <block class="Magento\Framework\View\Element\Html\Link\Current" ifconfig="contact/contact/enabled" name="contact-us-link" before="-">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Contact Us 2023</argument>
                    <argument name="path" xsi:type="string">contact</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>