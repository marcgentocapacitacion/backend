<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="PaymentMethodFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\BicicletasMilan\PaymentMethod\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">BicicletasMilan\PaymentMethod\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PaymentMethodValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PaymentMethodCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PaymentMethodConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\BicicletasMilan\PaymentMethod\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PaymentMethodConfig -->
    <virtualType name="PaymentMethodLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PaymentMethodConfig</argument>
        </arguments>
    </virtualType>

    <type name="BicicletasMilan\PaymentMethod\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">PaymentMethodLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PaymentMethodCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PaymentMethodAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PaymentMethodCaptureCommand</item>
                <item name="void" xsi:type="string">PaymentMethodVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PaymentMethodAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PaymentMethodAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PaymentMethodResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PaymentMethodAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builder" xsi:type="array">
                <item name="transaction" xsi:type="string">BicicletasMilan\PaymentMethod\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">BicicletasMilan\PaymentMethod\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="BicicletasMilan\PaymentMethod\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaymentMethodConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PaymentMethodCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="BicicletasMilan\PaymentMethod\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaymentMethodConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PaymentMethodVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">BicicletasMilan\PaymentMethod\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="BicicletasMilan\PaymentMethod\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PaymentMethodConfig</argument>
        </arguments>
    </type>    

    <!-- Response handlers -->
    <virtualType name="PaymentMethodResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">BicicletasMilan\PaymentMethod\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">BicicletasMilan\PaymentMethod\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>
    
    <!-- Value handler infrastructure -->
    <virtualType name="PaymentMethodValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PaymentMethodConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PaymentMethodConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PaymentMethodConfig</argument>
        </arguments>
    </virtualType>
        
    <type name="BicicletasMilan\PaymentMethod\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PaymentMethodConfig</argument>
        </arguments>
    </type>
</config>